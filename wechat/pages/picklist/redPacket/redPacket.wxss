.red-packet{
  padding-top: 80rpx;
  text-align: center;
}
.red-packet .info {
  display: flex;
  justify-content: center;
  text-align: center;
}
.red-packet .info span {
  font-weight: bold;
  font-size: 36rpx;
  color: #333;
  margin-left: 30rpx;
}
.red-packet .info image{
    width: 58rpx;
    vertical-align: top;
}
.info-tip {
  font-size: 30rpx;
  line-height: 42rpx;
  color: #333;
  padding-left: 190rpx;
  padding-right: 80rpx;
  margin-top: 16rpx;
  text-align: left;
}
.redBag {
  width: 480rpx;
  vertical-align: top;  
}
.money {
  position: absolute;
  bottom: 150rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  color: #fff;
}
.money text {
  font-size: 60rpx;
}
.btn {
  width: 638rpx;
  height: 90rpx;
  border-radius: 15rpx;
  background: #2eab3b;
  font-size: 34rpx;
  line-height: 90rpx;
  color: #fff;
  margin: 80rpx auto 0;
}