.video-and-picture {
  height: 100%;
  background: #fff;
  position: relative;
}
.record-video {
  width: 100%;
  height: 288rpx;
  background: #fff;
  text-align: center;
}
.record-video image{
  width: 80rpx;
  margin-top: 60rpx;
  margin-bottom: 30rpx;
  vertical-align: top;
}
.record-video .record-btn {
  width: 438rpx;
  height: 68rpx;
  border-radius: 14rpx;
  background: #35aa42;
  font-size: 34rpx;
  line-height: 68rpx;
  color: #fff;
  margin: 0 auto;
}
.gap {
  height: 20rpx;
  background: #f3f2f7;
}
.pics{
  padding: 24rpx;
}
.pics .title {
  font-size: 30rpx;
  line-height: 30rpx;
  position: relative;
  text-indent: 20rpx;
}
.pics .title::before {
  content: '';
  display: block;
  width: 4rpx;
  height: 30rpx;
  background: #35aa42;
  position: absolute;
  left: 0;
  top: 0;
}
.car1-info,
.car2-info {
  font-size: 26rpx;
  line-height: 26rpx;
  margin: 40rpx 0 23rpx;
}
.up-pic-box {
  display: flex;
  flex-wrap: wrap;
}
.up-pic-box .image,
.up-pic-box image{
  position: relative;
  width: 226rpx;
  height: 154rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background: #f3f2f7;
}
.up-pic-box .image:nth-child(3n){
  margin-right: 0;
}
.up-pic-box .up-pic-btn {
  width: 226rpx;
  height: 154rpx;
  background: #f3f2f7;  
  text-align: center;
}
.up-pic-box .describe {
  width: 100%;
  height: 37rpx;
  background: rgba(255, 255, 255, .5);
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 20rpx;
  text-align: center;
  line-height: 37rpx;
  color: #333;
}
.up-pic-btn image {
  width: 38rpx;
  border-radius: 50%;
  margin: 45rpx 0 18rpx;
  vertical-align: top;
}
.up-pic-btn view {
  font-size: 20rpx;
  line-height: 20rpx;
  color: #666;
}
.mask {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}
.mask .box {
  width: 645rpx;
  padding: 25rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.box .title {
  font-size: 30rpx;
  line-height: 30rpx;
  margin-bottom: 40rpx;
}
.box .close {
  font-size: 30rpx;
  line-height: 30rpx;
  padding: 30rpx;
  position: absolute;
  top: -10rpx;
  right: 0;
}
.box .type {
  min-width: 100rpx;
  font-size: 26rpx;
  line-height: 62rpx;
  border:1rpx solid #dcdcdc;
  border-radius: 13rpx;
  padding: 0 20rpx;
  margin: 0 10rpx 20rpx 0;
  text-align: center;
}
.box .typeactive {
  background: #35aa42;
  color: #fff;
}