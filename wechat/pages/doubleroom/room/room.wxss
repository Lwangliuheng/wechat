/* pages/livepushertest/room/room.wxss */
.container-box {
  background-color: #333;
  position:fixed;
  width:100%;
  z-index: 10;
  height:100%;
}
.img-box {
  position: relative;
  display:inline-block;
  height: 10vh;
  width: 25vw;
  vertical-align: middle;
}
.cameraview{
   position: relative;
   height:100%;
   width:100%;
}
.img-box image {
  position: absolute;
  width: 8vh;
  height: 8vh;
  top: 1vh; 
  left: calc(12.5vw - 4vh);
}
.operate {
   margin-top: 0vw; 
  position:absolute;
  bottom: 10px;
  left: 0;
}
.comment-box {
  position: relative;
  width: 100vw;
  height: calc(90vh - 69.33vw);
  margin-top: 2vw;
}
.comment {
  background-color: #262626;
  width: 100vw;
  height: calc(90vh - 75.33vw - 1.4rem);
  font-size: 13px;

}
.comment .comment-detail {
  padding: 5px 20px;
  color: #999;
}
.comment-input {
  position: absolute;
  bottom: 0;
  width: 90vw; 
  background-color: #4a4a4a;
  color: #acacac;
  padding: 3vw 5vw;
}
.player-box {
	position: relative; 
	display: inline-block; 
	overflow: hidden;
	width: 0.1px;
	height: 0.1px; 
	text-align: center;
  vertical-align: top;
  bottom:0;
  left:0;
  background:#333;
}

live-player {
  /* width: 49vw;
  height: 65.33vw; */
  width: 0.10px;
	height: 0.10px; 
  position: absolute;
  left: 0;
  bottom: 0;
}
.character {
  position: absolute;
  left: 0;
  bottom: 0;
  /* z-index: 1000; */
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}
.loading {
  position: absolute;
  width: 100%;  
  height: 100%; 
}
.loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}
